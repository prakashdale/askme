    "version": "0.2.0",
    "configurations": [
        
        {
            "name":"Action Server",
            "type":"python",
            "request":"launch",
            "module":"rasa",
            "args": ["run", "actions"]
        },

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["run", "-m", "models", "--endpoints", "endpoints.yml","--enable-api", "--cors", "*"]
        },
        {
            "name": "Python: shell",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["shell"]
        },  
        {
            "name": "Python: Train",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["train"]

        } 
    ]
}